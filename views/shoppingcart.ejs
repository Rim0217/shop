<!doctype html>
<html lang="en" class="no-js">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	
	<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet" />
	<link rel='stylesheet' href='stylesheets/font.css'  type='text/css'>
	<link rel="stylesheet" href="stylesheets/reset.css"> <!-- CSS reset -->
	<link rel="stylesheet" href="stylesheets/style.css">
	<link rel='stylesheet' href='stylesheets/shoppingcartStyle.css'  type='text/css'>
	<script src="javascripts/modernizr.js"></script>
	<title>SHOPPING CART</title>
</head>
<body>
	<header class = "heading">
		<h1 class = "title">HOUSE FURNITURE<h1>
	</header>

		<!-- Side navigation bar -->
		<nav class="cd-stretchy-nav">
			<a class="cd-nav-trigger" href="#">
				Menu
				<span aria-hidden="true"></span>
			</a>

			<ul>
				<li><a href="../" class="active"><span>HOME</span><!-- <i class="fa fa-home" aria-hidden="true"> --></i></a></li>
				<li><a href="../store"><span>STORE</span></a></li>
				<li><a href="../shoppingcart"><span>SHOPPING CART</span></a></li>
				<li><a href="#"><span>CONTACT</span></a></li>
			</ul>

			<span aria-hidden="true" class="stretchy-nav-bg"></span>
		</nav>
		<!-- Side navigation bar end -->

		<main class="cd-main-content">
			<table class="list">

				<tr>
					<th>PRODUCT</th>
					<th>PRICE</th>
					<th>QUANTITY</th>
					<th>

					</th>
				</tr>
				<% for(var i = 0; i<data.length; i++){ %>
				<tr>
					<td class = "productTableData">
						<div>
							<ul class = "product">
								<li class="productImage"><img src="images/<%= data[i].image_name %>.jpg"></li>
								<li><%= data[i].name%></li>
							</ui>
						</div>										
					</td>

					<td><%= data[i].price %>원</td>
					<form id = "editQuantity" method="post" action="../shoppingcart/edit/<%= data[i].id %>">
						<td class="quantityTableData">
							<input  class = "quantity" name = "quantity" type = "number" value = "<%= data[i].quantity %>" min="1" max="50">
						</td>
						<td>
							<ul>
								<li><input type="submit" name="submit" value="Edit"></li>
								<!-- 						<li><a class="a-inside edit" href="../shoppingcart/edit/<%= data[i].id %>">Edit</a></li> -->
								<li><a class="a-inside delete" href="../shoppingcart/delete/<%= data[i].id %>" >Delete</a></li>					
							</ul>
						</td>
					</form>			
				</tr>
				<%}%>					
			</table>
		</main>
		<% var result = 0; %>
		<% for(var i = 0; i<data.length; i++){ %>						
		<% result = result + (data[i].price * data[i].quantity)%>
		<%}%>	
		<h1>Total Price: <%= result %> 원</h1>	
		<script src="javascripts/jquery-2.1.4.js"></script>
		<script src="javascripts/main.js"></script> <!-- Resource jQuery -->
	</body>
	</html>