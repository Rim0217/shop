doctype html
html.no-js(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css', rel='stylesheet')
    link(rel='stylesheet', href='stylesheets/font.css', type='text/css')
    link(rel='stylesheet', href='stylesheets/reset.css')
    link(rel='stylesheet', href='stylesheets/registrationStyle.css')
    link(rel='stylesheet', href='stylesheets/style.css')
    link(rel='stylesheet', href='stylesheets/button.css')
    script(src='javascripts/modernizr.js')

    title REGISTRATION
  body
    header.heading
      img(src='images/banner1.png')
    // Side navigation bar
    nav.cd-stretchy-nav
      a.cd-nav-trigger(href='#')
        | Menu
        span(aria-hidden='true')
      ul
        li
          a.active(href='../')
            span HOME
            // <i class="fa fa-home" aria-hidden="true">
        li
          a(href='../store')
            span STORE
        li
          a(href='../shoppingcart')
            span SHOPPING CART
        li
          a(href='#')
            span CONTACT
      span.stretchy-nav-bg(aria-hidden='true')
    // Side navigation bar end
    main.cd-main-content
      .contents
        h1.inviting
          i.fa.fa-user REGISTRATION
        form.registrationForm(action='../newUser', method='post')
          table.register
            tr
              td.firstName First Name 
            tr  
              td
                input.firstNameInput(type='text', name='firstName')
            tr
              td.lastName Last Name 
            tr  
              td
                input.lastNameInput(type='text', name='lastName')
            tr
              td.userId ID 
            tr  
              td
                input.userIdInput(type='text', name='userId')        
            tr
              td.email Email 
            tr  
              td
                input.emailInput(type='text', name='email')
            tr
              td.password Password 
            tr  
              td
                input.passwordInput(type='password', name='password')
            tr
              td.registerButton(colspan=2)
                input.button(type='submit', value='Now Register')
    script(src='javascripts/jquery-2.1.4.js')
    script(src='javascripts/main.js')
    // Resource jQuery